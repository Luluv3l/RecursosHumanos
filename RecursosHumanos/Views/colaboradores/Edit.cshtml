@model Planilla.Models.colaboradores

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Fonts -->
    <link rel="dns-prefetch" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,600" rel="stylesheet" type="text/css">

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


    <link rel="icon" href="Favicon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link href="~/Recursos/css/fondo.css" rel="stylesheet" />
    <title>Editar Colaborador</title>
</head>
<body>
    @Html.Partial("menubar")
    <div class="row mb-3">
    </div>

    @if (TempData["SuccedMensaje"] != null)
    {
        <div class="alert alert-success">@TempData["SuccedMensaje"]</div>
    }

    @if (TempData["ErrorMensaje1"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMensaje1"]</div>
    }
    @if (TempData["ErrorMensaje"] != null)
    {
        <div class="alert alert-info">@TempData["ErrorMensaje"]</div>
    }
    <main class="my-form">
        <div class="container fluid">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header text-white" style="background-color: #2980B9;">MODIFCAR COLABORADOR</div>
                        <div class="card-body">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group row">
                                    <label for="name" class="col-md-4 col-form-label text-md-left">CÓDIGO</label>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.id_colaborador, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.id_colaborador, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="name" class="col-md-4 col-form-label text-md-left">NÚMERO DE CÉDULA</label>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.identificacion, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.identificacion, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="name" class="col-md-4 col-form-label text-md-left">NOMBRE</label>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", oninput = "soloLetras(this)", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="name" class="col-md-4 col-form-label text-md-left">PRIMER APELLIDO</label>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.apellido_1, new { htmlAttributes = new { @class = "form-control", oninput = "soloLetras(this)" , @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.apellido_1, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="name" class="col-md-4 col-form-label text-md-left">SEGUNDO APELLIDO</label>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.apellido_2, new { htmlAttributes = new { @class = "form-control", oninput = "soloLetras(this)" } })
                                        @Html.ValidationMessageFor(model => model.apellido_2, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="name" class="col-md-4 col-form-label text-md-left">E-MAIL</label>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="name" class="col-md-4 col-form-label text-md-left">TELÉFONO</label>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
                                    </div>
                                </div>


                                <div hidden class="form-group row">
                                    <label for="name" class="col-md-4 col-form-label text-md-left">Fecha Ingreso</label>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control" }, @name = "fecha_ingreso", Type = "date" })
                                        @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div hidden class="form-group row">
                                    <label for="name" class="col-md-4 col-form-label text-md-left">Puesto</label>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.puesto, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.puesto, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div hidden class="form-group row">
                                    <label for="name" class="col-md-4 col-form-label text-md-left">Tipo de planilla</label>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.planilla, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.planilla, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <div hidden class="form-group row">
                                    <label for="name" class="col-md-4 col-form-label text-md-left">Jornada</label>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.jornada, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.jornada, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="name" class="col-md-4 col-form-label text-md-left">Estado</label>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.estado, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                        <label for="phone_number" class="col-md-4 col-form-label text-md-right">JORNADA LABORAL</label>
                                        <div class="col-md-6">
                                            <input type="checkbox" name="opcion1" value="1" checked> Opción 1<br>
                                            <input type="checkbox" name="opcion2" value="2"> Opción 2<br>
                                            <input type="checkbox" name="opcion3" value="3"> Opción 3
                                        </div>
                                  </div>
                                <div class="col-md-6 offset-md-4">
                                    <button type="submit" class="btn btn-primary" value="Save">
                                        APLICAR CAMBIOS
                                    </button>
                                </div>

                            }

                            <div>
                                @Html.ActionLink("REGRESAR", "Details")
                            </div>
                        </div>

                    </div>

                </div>

            </div>

        </div>

    </main>
    <script>

        function soloLetras(input) {

            var regex = /[^a-zA-Z]/g;

            input.value = input.value.replace(regex, '');
        }



    </script>

</body>
</html>
