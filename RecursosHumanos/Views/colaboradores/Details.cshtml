@model List<Planilla.Models.colaboradores>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Fonts -->
    <link rel="dns-prefetch" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,600" rel="stylesheet" type="text/css">

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


    <link rel="icon" href="Favicon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    @*<link href="~/Recursos/css/fondo.css" rel="stylesheet" />*@
    <title>Buscar Colaborador</title>
</head>
<body>
    @Html.Partial("menubar")
    <div class="row mb-3">
    </div>


    @if (TempData["SuccedMensaje"] != null)
    {
        <div class="alert alert-success">@TempData["SuccedMensaje"]</div>
    }

    @if (TempData["ErrorMensaje1"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMensaje1"]</div>
    }
    @if (TempData["ErrorMensaje"] != null)
    {
        <div class="alert alert-info">@TempData["ErrorMensaje"]</div>
    }
    <main class="my-form">
        <div class="container fluid">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header text-white" style="background-color: #2980B9;">INFORMACIÓN DEL COLABORADOR</div>
                        <div class="card-body">

                            @using (Html.BeginForm("buscar", "colaboradores"))
                            {
                                <div class="form-group">
                                    <label class="col-md-4 control-label">BUSCAR COLABORADOR</label>
                                    <div class="col-md-8 inputGroupContainer">
                                        <div class="input-group">

                                            <input id="id" name="id" placeholder="Digite número de cédula del colaborador..." class="form-control" value="" type="number" required><span></span>
                                            <hr>
                                            <button class="btn btn-outline-secondary" type="submit">Buscar</button>
                                        </div>
                                    </div>
                                </div>}
                        </div>
                    </div>

                </div>
            </div>


            <div class="row mb-3">
                <div class="card-body">

                    <table border="0" id="datatable" class="table  " cellspacing="2" width="100%">
                        <thead class="thead-light">
                            <tr border="2">
                                <th>Código</th>
                                <th>Identifcacion</th>
                                <th>Nombre</th>
                                <th>Primer Apellido</th>
                                <th>Segundo Apellido</th>
                                <th>E-mail</th>
                                <th>Telefono</th>
                                <th >Puesto</th>
                                <th >Planilla</th>
                                <th>Estado</th>
                                <th></th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>

                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr class="table-light" border="1">
                                        <td >
                                            @Html.DisplayFor(modelItem => item.id_colaborador)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.identificacion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.apellido_1)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.apellido_2)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.correo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.telefono)
                                        </td>
                                        <td >
                                            @Html.DisplayFor(modelItem => item.puesto)
                                        </td>
                                        <td >
                                            @Html.DisplayFor(modelItem => item.planilla)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.estado)
                                        </td>

                                        <td>
                                            @Html.ActionLink("Editar", "Edit", new { id = item.id_colaborador })
                                            @* @Html.ActionLink("Eliminar", "Delete", new { id = item.id_colaborador }, new { onclick = "return confirm('SEGURO DESEA ELIMINAR ESTE COLABORADOR?');" })*@
                                        </td>
                                        <td>
                                            @*@Html.ActionLink("Editar", "Edit", new { id = item.id_colaborador })*@
                                            @Html.ActionLink("Eliminar", "Delete", new { id = item.id_colaborador }, new { onclick = "return confirm('SEGURO DESEA ELIMINAR ESTE COLABORADOR?');" })
                                        </td>
                                    </tr>

                                }
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>





    </main>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>
</html>

